<link href="/css/campaigns.css" rel="stylesheet">

<div class="background-blue text-center">
    <button class="cta-button btn-yellow"><a href="/createCampaign"><h3>Create Campaign</h3></a></button>
    <br>

    <div ng-controller="campaignController" >
    	<div ng-repeat="campaign in campaigns" class="background-white">
            <div class="campaign-info">
                <h5>{[{campaign.date}]}</h5>
                <h4>{[{campaign.title}]}</h4>
                <div class="text-center">
                    <!-- TODO: Update analytics link when we have individual pages for each campaign -->
                    <a href="/analytics"><div class="option-button">
                        <img src="/images/analytics_icon.svg" />
                        <p>Analytics</p>
                    </div></a>
                    <!-- TODO: This should copy the link to the clipboard, not just to the campaign page. -->
                    <!-- <a href="/{[{campaign._id}]}"><div class="option-button"> -->
                    <!-- <div ngclipboard data-clipboard-text="https://www.hellogov.org/{[{campaign._id}]}"> -->
                    <div class="option-button">
                        <input type="image" src="/images/pencil.jpg" ngclipboard data-clipboard-text="https://www.hellogov.org/{[{campaign._id}]}"/>
                        <p>Copy to clipboard</p>
                    </div>
                    <div ngclipboard data-clipboard-text="TEST">
                        <img src="/images/white_link_icon.jpg" />
                        <p>Link</p>
                    </div>
                    <!-- </div></a> -->
                    <a ng-href="/campaign/{[{campaign._id}]}/edit"><div class="option-button">
                        <img src="/images/pencil.jpg" />
                        <p>Edit</p>
                    </div></a>
                    <a href="/campaign/{[{campaign._id}]}/delete"><div class="option-button">
                        <img src="/images/white_delete_icon.jpg" />
                        <p>Delete</p>
                    </div></a>
                </div>
            </div>
    	</div>
    </div>
</div>
